<p id="notice"><%= notice %></p>

<h1>Listing Advertisers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Address</th>
      <th>Pincode</th>
      <th>Phone</th>
      <th>Is member</th>
      <th>Wants calls</th>
      <th>User:Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisers.each do |advertiser| %>
      <tr>
        <td><%= advertiser.name %></td>
        <td><%= advertiser.category %></td>
        <td><%= advertiser.address %></td>
        <td><%= advertiser.pincode %></td>
        <td><%= advertiser.phone %></td>
        <td><%= advertiser.is_member %></td>
        <td><%= advertiser.wants_calls %></td>
        <td><%= advertiser.user.email %></td>
        <td><%= link_to 'Show', advertiser %></td>
        <td><%= link_to 'Edit', edit_advertiser_path(advertiser) %></td>
        <td><%= link_to 'Destroy', advertiser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

